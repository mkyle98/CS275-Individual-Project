<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/snack_name_label"/>
    <EditText
        android:id="@+id/snack_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/snack_name_hint"/>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/snack_details_label"/>
    <Button
        android:id="@+id/snack_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/snack_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/snack_found_label"/>

</LinearLayout>